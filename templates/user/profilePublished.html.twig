{% extends 'base.html.twig' %}
{% block title %}
    Mes articles
{% endblock %}
{% block body %}
    <div class="published-container main-layout">
        <div class="table-responsive">
            {% for article in articles %}
                <table class="table table-bordered table-condensed">
                    <thead>
                    <tr>
                        <th class="text-center">Titre</th>
                        <th class="text-center">Contenu</th>
                        <th class="text-center">Date de cr√©ation</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr class="text-center">
                        <td>{{ article.title }}</td>
                        <td>{{ article.content|length > 20 ? article.content|striptags|slice(0, 20) ~ '...' : article.content|striptags }}</td>
                        <td>{{ article.createdAt | date('d/m/Y') }}</td>
                        <td>
                            <a href="{{ path('blog.edit_article', {'id' : article.id }) }}" class="txt-orange"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href="#" class="txt-orange"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            {% endfor %}
        </div>
    </div>
{% endblock %}