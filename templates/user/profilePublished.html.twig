{% extends 'base.html.twig' %}
{% block title %}
    Mes articles
{% endblock %}
{% block body %}
    <div class="published-container main-layout">
        <h2>Mes publications</h2>

        <div class="table-responsive">
            <table class="table table-bordered table-condensed">
                <thead>
                <tr>
                    <th class="text-center">Titre</th>
                    <th class="text-center">Contenu</th>
                    <th class="text-center">Date de cr√©ation</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for article in articles %}
                        <tr class="text-center">
                            <td>{{ article.title }}</td>
                            <td>{{ article.content|length > 40 ? article.content|striptags|slice(0, 40) ~ '...' : article.content|striptags }}</td>
                            <td>{{ article.createdAt | date('d/m/Y') }}</td>
                            <td>
                                <a href="{{ path('blog.edit_article', {'id' : article.id }) }}" class="txt-orange"><span class="glyphicon glyphicon-pencil"></span></a>
                                <a href="#" class="txt-orange"><span class="glyphicon glyphicon-trash"></span></a>
                            </td>
                        </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}