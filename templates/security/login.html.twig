{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
    <div class="login-form common-min-height">
        <div class="login-form-content">
            <div class="text-center">
                <img src="{{ asset('images/nao2.png') }}" alt="Logo de l'association Nos Amis les Oiseaux">
            </div>
            <h1 class="text-center no-margin">Connexion</h1>
            <div class="login-form-container">
                {% if error %}
                    <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {{ form_start(form, { attr: { action: path('security.login') }}) }}
                <div class="text-center">
                    {{ form_errors(form.mail) }}
                    {{ form_label(form.mail) }}
                    {{ form_widget(form.mail) }}
                </div>
                <div class="text-center">
                    {{ form_errors(form.password) }}
                    {{ form_label(form.password) }}
                    {{ form_widget(form.password) }}
                </div>
                <span class="text-danger">* Champs obligatoires</span>

                <div class="text-center">
                    <button type="submit" class="no-border">Se connecter</button>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>
                {{ form_end(form) }}

                <hr>

                <p class="text-center">Pas encore inscrit ?<br><a href="{{ url('security.register') }}">Inscrivez-vous</a></p>
            </div>
        </div>
    </div>
{% endblock %}