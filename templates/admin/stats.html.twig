        <div class="progress">
            <h5 style="text-align: right; float: right; margin: 0">{{ statsObs['awaiting'] }}</h5>
            <div class="progress-bar" role="progressbar" aria-valuenow="{{ statsObs['obsPourcentage'] }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ statsObs['obsPourcentage'] }}%">
                <h5 style="text-align: left; margin: 0">{{ statsObs['validated'] }}</h5>
            </div>
        </div>
